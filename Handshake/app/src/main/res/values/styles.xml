<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="MaterialListRow">
        <item name="android:layout_marginLeft">@dimen/list_row_margin</item>
        <item name="android:layout_marginRight">@dimen/list_row_margin</item>
        <item name="android:layout_marginTop">@dimen/list_row_margin</item>
        <item name="android:layout_marginBottom">@dimen/list_row_margin</item>
    </style>

    android:layout_marginLeft="16dp"
    android:layout_marginStart="16dp"
</resources>
